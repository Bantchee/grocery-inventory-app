extend layout 

block content 
    h1=title 

    form(method='POST' action='')
        .form-group
            label(for='name') Store Name: 
            input#name.form-control(type='text' placeholder='Food Group Name' name='name', required=true value=(undefined===foodGroup ? '' : foodGroup.name))
        button.btn.btn-primary(type='submit') Submit
    if errors 
        ul 
            for error in errors
                li!=error.msg